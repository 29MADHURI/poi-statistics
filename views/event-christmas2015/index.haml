%div.container
  %div.page-header
    %h1 2015年圣诞节
  - idx = 0
  - ["Littorio", "大淀", "江风", "谷风", "初风"].each do |name|
    %div.panel.panel-primary
      %div.panel-heading
        %h4.panel-title="#{name}掉落统计"
      %div.panel-body
        %table.table.table-striped.table-hover{:style => "text-align:center;"}
          %thead
            %tr
              %td 海域
              %td 战斗点
              %td 掉落次数
              %td S胜利次数
              %td 掉落率
          %tbody
            - data[idx].sort{|a, b| b[:rate] <=> a[:rate]}.each do |d|
              %tr
                %td
                  %a{:href => "/drop/map/#{d[:mapName].gsub(/ \(\d+-\d+\)/, '')}.html"}= d[:mapName]
                %td= d[:cellName]
                %td= d[:count]
                %td= d[:total]
                %td= "#{d[:rate]}%"
    - idx += 1
