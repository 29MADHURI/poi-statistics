              %ul.list-inline
                - slotitem_list.select{|s| s["type"][0] == 3}.sort{|a, b| a["id"] <=> b["id"]}.each do |s|
                  %li
                    %p
                      %a.btn.btn-default{:href => "/development/item/#{s["id"]}.html"}= s["name"]
